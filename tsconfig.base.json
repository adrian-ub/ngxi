{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2020", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@internal/collections": ["collections/src/index.ts"],
      "@internal/scripts": ["scripts/src/index.ts"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "tmp"]
}
