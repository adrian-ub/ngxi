{
  "name": "carbon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/carbon/src",
  "prefix": "carbon",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/carbon/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/carbon/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/carbon/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  }
}
