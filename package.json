{
  "name": "@ngxi/source",
  "type": "module",
  "version": "0.8.0",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "build": "tsx scripts/build-all",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp -r --excute=\"pnpm i\"",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@angular/compiler-cli": "catalog:angular",
    "@angular/core": "catalog:angular",
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/nip": "catalog:cli",
    "@iconify/json": "catalog:utils",
    "@iconify/types": "catalog:utils",
    "@iconify/utils": "catalog:utils",
    "@types/cli-progress": "catalog:types",
    "@types/ejs": "catalog:types",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "cheerio": "catalog:utils",
    "cli-progress": "catalog:utils",
    "ejs": "catalog:utils",
    "esbuild": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "ng-packagr": "catalog:angular",
    "p-limit": "catalog:utils",
    "picocolors": "catalog:utils",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tslib": "catalog:angular",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
